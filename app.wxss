/**app.wxss**/
page{
  height:100%;
  box-sizing: border-box;
  position: relative;
}

button{
  box-sizing: border-box;
  border: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.search-input{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  padding: 10rpx;
  background: #e2e2e2;
  box-sizing:border-box;
}

.search-input input{
  background: #fff;
  box-sizing:border-box;
  padding: 10rpx 20rpx 10rpx 70rpx;
  border-radius: 8rpx;
  height: 50rpx;
  font-size: 28rpx;
}

.search-input icon{
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  z-index: 100;
}