/**app.wxss**/
page{
  height:100%;
  box-sizing: border-box;
  position: relative;
  font-size: 30rpx;
}

button{
  box-sizing: border-box;
  border: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.search-input{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  padding: 10rpx;
  background: #e2e2e2;
  box-sizing:border-box;
}

.search-input input{
  background: #fff;
  box-sizing:border-box;
  padding: 10rpx 20rpx 10rpx 70rpx;
  border-radius: 8rpx;
  height: 50rpx;
  font-size: 28rpx;
}

.search-input icon{
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  z-index: 100;
}
image{
  border: 0;
}

/* 信息列表样式 */
.info-list{
  padding-left: 20rpx;
  box-sizing: border-box;
}
.info-item{
  padding: 20rpx 0;
  border-bottom: 1px solid #e2e2e2;
  position: relative;
  height: 200rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 260rpx;
}
.info-item .info-pic{
  position: absolute;
  left: 0rpx;
  top: 20rpx;
  width: 240rpx;
  height: 160rpx;
  box-sizing: border-box;
}
.info-item .info-pic image{
  display: block;
  width: 100%;
}
.info-item .info-pic text{
  position: absolute;
  left: 0;
  top: 0;
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  background: #5f86f2;
  color:#fff;
}
.info-content{
  position: relative;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding-right: 15rpx;
}
.info-content > view{
  word-break: keep-all;
  overflow: hidden;
}

.info-content .info-title{
  font-size: 30rpx;
  font-weight: bold;
}

.info-content .info-datail{
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}
.info-content .info-datail .info-commission-price{
  float: right;
}
.info-content .info-price{
  position: absolute;
  left: 0;
  bottom: -8rpx;
  width: 100%;
  font-size: 26rpx;
  color:#999;
}
.info-content .info-price view{
  display: inline-block;
  color: #fd511c;
  padding-right: 10rpx;
}
.info-content .info-price view text{
  font-weight: bold;
  font-size: 38rpx;
}



