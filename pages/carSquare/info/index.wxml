<!--pages/carSquare/info/index.wxml-->
<view class='page-content'>
    <view class='page-swiper'>
      <swiper indicator-dots="true" autoplay="true" duration="1000" bindchange="listenSwiper" >
          <!--swiper-item只能包含一个节点再多会自动删除-->
          <swiper-item wx:for="{{detail.Imgs}}" wx:key="{{new Date().getTime()}}">
              <view style="background: #666; height: 150px">
                <image class='ic-close' src='{{item.url}}' mode="widthFix"></image>
              </view>
          </swiper-item>
      </swiper>
    </view>

    <view class='page-info-head'>
        <view class='head-title'>
            <text class='info-status-text' wx:if="{{detail.SellStatus == 0}}">待销售</text>
            <text class='info-status-text' wx:if="{{detail.SellStatus == 1}}">已售</text>
            <text class='info-status-text' wx:if="{{detail.SellStatus == 2}}">预订</text>
            {{(detail.CarBrand.Name || '') + (detail.CarSeries.Name || '') + (detail.Title || '')}}
        </view>

        <view class='head-price'>
            <text class='color'>￥ <text class='max'>{{detail.Price}}</text>万</text>
            新车价 {{detail.RecommendPrice}}万

            <view class='btn'>
                <text>佣金 ￥{{detail.Commission}}</text>
            </view>
        </view>
    </view>
    <view class='margin-bg-dom'></view>

    <view class='page-info-content'>
        <view class='title-bg'>
            <image class='ic-close' src='../../../images/info-bg.png' mode="widthFix"></image>
        </view>

        <view class='info-text-content'>
            <view class='info-text-item'>
                <view class='item-label'>上牌日期</view>{{detail.detailInfo}}
            </view>
            <view class='info-text-item blank-bg'>
                <view class='item-label'>年检保修到期</view>{{detail.checkDate}}
            </view>
            <view class='info-text-item'>
                <view class='item-label'>填写里程数</view>{{detail.Mileage}}公里
            </view>
            <view class='info-text-item blank-bg'>
                <view class='item-label'>本车佣金</view>￥{{detail.Commission}}   以线下协商为准
            </view>
            <view class='info-text-item'>
                <view class='item-label'>其他信息</view>{{detail.Title}}
            </view>
        </view>
    </view>

    <view class='car-business-info'>
        <view class='title-bg'>
            <image class='ic-close' src='../../../images/car-info-bg.png' mode="widthFix"></image>
        </view>
        <view class='info-list'>
          <view class='info-item follow-item'>
              <text class='item-tag'>推荐</text>
              <view class='info-pic'>
                  <image src='{{detail.ExtInfo.Avatar}}' mode="widthFix"></image>
              </view>

              <view class='info-content'>
                  <view class='info-title'>{{detail.ExtInfo.UserName}}</view>

                  <!-- <view class='info-price'>2017年入驻</view> -->
              </view>

              <view class='follow-btn' wx:if="{{!detail.ExtInfo.Following && !detail.ExtInfo.Editble}}" bindtap='followAction'>
                  <image src='../../../images/ic-close.png' mode="widthFix"></image>
                  关注
              </view>

              <view class='follow-active-btn' wx:if="{{detail.ExtInfo.Following && !detail.ExtInfo.Editble}}" bindtap='unFollowAction'>
                  取消关注
              </view>
          </view>
        </view>
    </view>

    <view class='fix-footer-btn' bindtap='callPhoneNumber' wx:if="{{!detail.ExtInfo.Editble}}">
        <image class='ic-close' src='../../../images/look-car-bg.png' mode="widthFix"></image>
    </view>

    <view class='fix-footer-edit-btn' wx:if="{{detail.ExtInfo.Editble}}">
        <text bindtap='editInfo' class='first'>编辑</text>
        <text bindtap='deleteInfo'>删除</text>
    </view>
</view>