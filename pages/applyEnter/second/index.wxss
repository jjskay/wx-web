/* pages/applyEnter/first/index.wxss */
page{
  background: #e8eefc;
  padding: 4%;
  box-sizing: border-box;
}
.content{
  padding: 60rpx 0 40rpx;
  background: #fff;
  border-radius: 8rpx;
  color: #333;
}
.content-title{
  text-align: center;
  font-size: 36rpx;
  padding-bottom: 60rpx;
}
.content-tag image{
  display: block;
  width: 270rpx;
  height: 72rpx;
  position: relative;
  left: -36rpx;
  margin-bottom: 60rpx;
}

.logi-phone-model,
.logi-code-model{
  padding: 0 40rpx;
  position: relative;
}

.logi-phone-model .model-box{
  padding-right: 200rpx;
}

.model-box{
  border-bottom: 1px solid #999;
  padding: 10rpx 0;
  box-sizing: border-box;
  height: 90rpx;
  position: relative;
  padding-left: 160rpx;
}
.border-none{
  border: none;
}

.logi-model-label{
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -20rpx;
}

.submit-btn{
  padding: 0 50rpx;
  box-sizing: border-box;
  padding-top: 100rpx;
}

.submit-btn image{
  width: 100%;
  display: block;
}

input{  
  color:#222c67;
  height: 70rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.logi-phone-model .get-code-btn{
  position: absolute;
  right: 0;
  top: 15rpx;
  padding: 10rpx;
  border: 1px solid #999;
  border-radius: 8rpx;
  color:#333;
}

.pic-box{
  padding-left: 200rpx;
  overflow: hidden;
  padding-top: 30rpx;
}

.pic-box > view{
  display: inline-block;
  min-height: 250rpx;
  width: 40%;
  margin-right: 8%;
  border: 1px solid #999;
  border-radius: 10rpx;
  position: relative;
}

.add-btn{
  text-align: center;
  position: relative;
}

.add-btn image{
  width: 70rpx;
  top: 50%;
  left: 50%;
  margin-left: -35rpx;
  margin-top: -35rpx;
  position: absolute;
}
.pic image{
  width: 50rpx;
  top: -25rpx;
  right: -25rpx;
  position: absolute;
}


