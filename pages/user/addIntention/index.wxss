/* pages/user/addIntention/index.wxss */
.page-intention{
  padding-left: 50rpx;
  padding-top: 40rpx;
}

.link-item{
  position: relative;
  overflow: hidden;
}

.link-item input{
  display: inline-block;
  float: right;
  line-height:45rpx;
  padding: 20rpx 0 20rpx 20rpx;
  text-align: right;
  font-size: 26rpx;
}

.select-car{
  position: absolute;
  opacity: 0;
  z-index: 100;
  top: -100rpx;
  left: 0;
  width: 100%;
}

.other-info-box .head{
  padding: 30rpx 0 50rpx 230rpx;
  position: relative;
  line-height: 45rpx;
  color:#e65961;
  font-size: 26rpx;
}
.other-info-box .head .ic-close{
  position: absolute;
  width: 230rpx;
  left: -8rpx;
  top: 20rpx;
}
.icon-info{
  width: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.release-btn{
  padding: 80rpx 0 0;
  text-align: center;
}
.release-btn image{
  width: 80%;
  margin: 0 auto;
  margin-left: -25rpx;
}

